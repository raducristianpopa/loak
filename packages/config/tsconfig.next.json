{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "incremental": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "noEmit": true,
        "isolatedModules": true,
        "allowJs": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
